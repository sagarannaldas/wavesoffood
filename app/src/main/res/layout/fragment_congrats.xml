<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragment.CongratsBottomSheetFragment">

    <TextView
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congrats \nYour Order Placed" />

    <ImageView
        android:layout_margin="16dp"
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/congratulations" />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/green_button_gradient"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        android:id="@+id/buttonGoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Home" />

</LinearLayout>